<Application x:Class="TechDashboard.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:TechDashboard.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <converters:ThemeConverter x:Key="ThemeConverter"/>
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
            <converters:LanguageConverter x:Key="LanguageConverter"/>

            <!-- Merged Dictionaries -->
            <ResourceDictionary.MergedDictionaries>
                <!-- Default Theme -->
                <ResourceDictionary Source="Themes/DarkTheme.xaml"/>
                <!-- Default Language -->
                <ResourceDictionary Source="Languages/en-US.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>