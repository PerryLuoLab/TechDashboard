<Application x:Class="TechDashboard.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:TechDashboard.Converters"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <!-- NOTE: StartupUri removed, MainWindow is created in App.xaml.cs OnStartup using DI -->
    <Application.Resources>
        <ResourceDictionary>
            <!-- Converters -->
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <converters:ThemeConverter x:Key="ThemeConverter"/>
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
            <converters:LanguageConverter x:Key="LanguageConverter"/>

            <!-- Merged Dictionaries -->
            <ResourceDictionary.MergedDictionaries>
                <!-- Default Theme -->
                <ResourceDictionary Source="Themes/DarkTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>