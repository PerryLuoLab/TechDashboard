<!-- Example: Using WPFLocalizeExtension in MainWindow.xaml -->
<!-- This file shows how to migrate from DynamicResource to lex:Loc -->

<Window x:Class="TechDashboard.Examples.LocalizationExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lex="http://wpflocalizeextension.codeplex.com"
        Title="{lex:Loc Dashboard_Title}"
        Height="600" Width="800">
    
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="Localization Examples" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <!-- Example 1: Simple Menu -->
            <TextBlock Text="Example 1: Menu with Localization" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,5"/>
            <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="OLD WAY (ResourceDictionary):" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Menu>
                        <MenuItem Header="{DynamicResource Menu_File}">
                            <MenuItem Header="{DynamicResource Menu_File_New}" />
                            <MenuItem Header="{DynamicResource Menu_File_Open}" />
                            <MenuItem Header="{DynamicResource Menu_File_Exit}" />
                        </MenuItem>
                    </Menu>
                    
                    <TextBlock Text="NEW WAY (WPFLocalizeExtension):" FontWeight="Bold" Margin="0,10,0,5"/>
                    <Menu>
                        <MenuItem Header="{lex:Loc Menu_File}">
                            <MenuItem Header="{lex:Loc Menu_File_New}" />
                            <MenuItem Header="{lex:Loc Menu_File_Open}" />
                            <MenuItem Header="{lex:Loc Menu_File_Exit}" />
                        </MenuItem>
                    </Menu>
                </StackPanel>
            </Border>
            
            <!-- Example 2: Navigation Panel -->
            <TextBlock Text="Example 2: Navigation Panel" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,5"/>
            <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- OLD WAY -->
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="OLD (DynamicResource):" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="{DynamicResource Nav_Dashboard}" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                        <Button Content="{DynamicResource Nav_Overview}" Margin="0,2"/>
                        <Button Content="{DynamicResource Nav_Analytics}" Margin="0,2"/>
                        <Button Content="{DynamicResource Nav_Reports}" Margin="0,2"/>
                        <Button Content="{DynamicResource Nav_Settings}" Margin="0,2"/>
                    </StackPanel>
                    
                    <!-- NEW WAY -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="NEW (lex:Loc):" FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="{lex:Loc Nav_Dashboard}" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                        <Button Content="{lex:Loc Nav_Overview}" Margin="0,2"/>
                        <Button Content="{lex:Loc Nav_Analytics}" Margin="0,2"/>
                        <Button Content="{lex:Loc Nav_Reports}" Margin="0,2"/>
                        <Button Content="{lex:Loc Nav_Settings}" Margin="0,2"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Example 3: Settings with Full Syntax -->
            <TextBlock Text="Example 3: Settings Page" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,5"/>
            <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,20">
                <StackPanel>
                    <!-- Theme Selection -->
                    <TextBlock Text="{lex:Loc Key=Settings_ChooseTheme}" FontWeight="Bold" Margin="0,0,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <ToggleButton Content="{lex:Loc Key=Settings_Theme_Dark}" Margin="5"/>
                        <ToggleButton Content="{lex:Loc Key=Settings_Theme_Light}" Margin="5"/>
                        <ToggleButton Content="{lex:Loc Key=Settings_Theme_BlueTech}" Margin="5"/>
                    </StackPanel>
                    
                    <!-- Language Selection -->
                    <TextBlock Text="{lex:Loc Settings_ChooseLanguage}" FontWeight="Bold" Margin="0,10,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <ToggleButton Content="{lex:Loc Settings_Lang_English}" Margin="5"/>
                        <ToggleButton Content="{lex:Loc Settings_Lang_Chinese}" Margin="5"/>
                        <ToggleButton Content="{lex:Loc Settings_Lang_TraditionalChinese}" Margin="5"/>
                        <ToggleButton Content="{lex:Loc Settings_Lang_Korean}" Margin="5"/>
                        <ToggleButton Content="{lex:Loc Settings_Lang_Japanese}" Margin="5"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Example 4: Status Bar -->
            <TextBlock Text="Example 4: Status Bar" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,5"/>
            <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,0,0,20">
                <StatusBar>
                    <StatusBarItem>
                        <TextBlock Text="{lex:Loc Status_Ready}" />
                    </StatusBarItem>
                    <Separator/>
                    <StatusBarItem>
                        <TextBlock Text="{lex:Loc Status_Language}" />
                    </StatusBarItem>
                </StatusBar>
            </Border>
            
            <!-- Notes -->
            <TextBlock Text="Key Benefits:" FontSize="18" FontWeight="SemiBold" Margin="0,10,0,5"/>
            <Border BorderBrush="LightGreen" BorderThickness="2" Background="#F0FFF0" Padding="10">
                <StackPanel>
                    <TextBlock Text="? Design-time preview shows actual localized text" Margin="0,2"/>
                    <TextBlock Text="? Compile-time checking (typos in keys will be caught)" Margin="0,2"/>
                    <TextBlock Text="? Better performance (no dictionary lookup)" Margin="0,2"/>
                    <TextBlock Text="? Standard .NET resource system" Margin="0,2"/>
                    <TextBlock Text="? Automatic culture fallback" Margin="0,2"/>
                    <TextBlock Text="? Both systems can coexist during migration" Margin="0,2"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Window>
