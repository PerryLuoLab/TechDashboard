<Window x:Class="TechDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TechDashboard.ViewModels"
        xmlns:lex="http://wpflocalizeextension.codeplex.com"
        xmlns:icons="clr-namespace:TechDashboard.Core.Constants"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        d:DesignHeight="720" d:DesignWidth="1100"
        lex:LocalizeDictionary.DesignCulture="en-US"
        lex:ResxLocalizationProvider.DefaultAssembly="TechDashboard"
        lex:ResxLocalizationProvider.DefaultDictionary="Strings"
        Title="{lex:Loc Dashboard_Title}" 
        Height="720" Width="1100"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <Border Background="{DynamicResource WindowBackgroundBrush}" 
            BorderBrush="{DynamicResource BorderBrush}" 
            BorderThickness="1"
            CornerRadius="8">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{DynamicResource HeaderBackgroundBrush}" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="0,0,0,1" 
                    Height="80"
                    CornerRadius="8,8,0,0"
                    ClipToBounds="False"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid ClipToBounds="False">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Width="64" Height="64" Margin="8,8,0,8">
                        <Border Width="48" Height="48" Background="{DynamicResource AccentBrush}" CornerRadius="8">
                            <TextBlock Text="D" FontSize="24" FontWeight="Bold" 
                                       Foreground="White" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                    </Border>

                    <TextBlock Grid.Column="1" 
                               Text="{lex:Loc Dashboard_Title}" 
                               Foreground="{DynamicResource TextBrush}" 
                               FontSize="18" 
                               FontWeight="Bold"
                               VerticalAlignment="Center" 
                               Margin="12,0,24,0"/>

                    <Grid Grid.Column="2" Margin="0,4,0,4" ClipToBounds="False">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Menu x:Name="MainMenu" 
                              Grid.Row="0" 
                              Background="Transparent" 
                              VerticalAlignment="Center"
                              Margin="0,0,0,0">
                            <MenuItem Header="{lex:Loc Menu_File}" Padding="6,4">
                                <MenuItem Header="{lex:Loc Menu_File_New}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="{x:Static icons:IconConstants+Common.Add}" 
                                                   FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                                   FontSize="16" 
                                                   Foreground="{DynamicResource AccentBrush}"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="{lex:Loc Menu_File_Open}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="{x:Static icons:IconConstants+Common.OpenFile}" 
                                                   FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                                   FontSize="16" 
                                                   Foreground="{DynamicResource AccentBrush}"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="{lex:Loc Menu_File_Exit}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="{x:Static icons:IconConstants+Common.Cancel}" 
                                                   FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                                   FontSize="16" 
                                                   Foreground="{DynamicResource ErrorBrush}"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </MenuItem>
                            <MenuItem Header="{lex:Loc Menu_Edit}" Padding="6,4">
                                <MenuItem Header="{lex:Loc Menu_Edit_Undo}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="{x:Static icons:IconConstants+Common.Undo}" 
                                                   FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                                   FontSize="16" 
                                                   Foreground="{DynamicResource AccentBrush}"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="{lex:Loc Menu_Edit_Redo}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="{x:Static icons:IconConstants+Common.Redo}" 
                                                   FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                                   FontSize="16" 
                                                   Foreground="{DynamicResource AccentBrush}"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="{lex:Loc Menu_Edit_Copy}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="{x:Static icons:IconConstants+Common.Copy}" 
                                                   FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                                   FontSize="16" 
                                                   Foreground="{DynamicResource AccentBrush}"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="{lex:Loc Menu_Edit_Paste}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="{x:Static icons:IconConstants+Common.Paste}" 
                                                   FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                                   FontSize="16" 
                                                   Foreground="{DynamicResource AccentBrush}"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </MenuItem>
                            <MenuItem Header="{lex:Loc Menu_View}" Padding="6,4">
                                <MenuItem Header="{lex:Loc Menu_View_Refresh}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="{x:Static icons:IconConstants+Common.Refresh}" 
                                                   FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                                   FontSize="16" 
                                                   Foreground="{DynamicResource AccentBrush}"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="{lex:Loc Menu_View_Fullscreen}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="{x:Static icons:IconConstants+Common.FullScreen}" 
                                                   FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                                   FontSize="16" 
                                                   Foreground="{DynamicResource AccentBrush}"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </MenuItem>
                            <MenuItem Header="{lex:Loc Menu_Help}" Padding="6,4">
                                <MenuItem Header="{lex:Loc Menu_Help_About}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="{x:Static icons:IconConstants+Common.Info}" 
                                                   FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                                   FontSize="16" 
                                                   Foreground="{DynamicResource AccentBrush}"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </MenuItem>
                        </Menu>

                        <Border Grid.Row="1" Height="2" Background="{DynamicResource BorderBrush}" Margin="0,2"/>

                        <StackPanel Grid.Row="2" 
                                    Orientation="Horizontal" 
                                    VerticalAlignment="Center"
                                    Margin="0,2,0,2"
                                    MinHeight="32"
                                    ClipToBounds="False">
                            <Button Style="{StaticResource ToolbarButtonStyle}" 
                                    ToolTip="{lex:Loc ToolTip_New}"
                                    Margin="0,0,5,0">
                                <TextBlock Text="{x:Static icons:IconConstants+Common.Add}" 
                                           FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                           FontSize="16"/>
                            </Button>
                            <Button Style="{StaticResource ToolbarButtonStyle}" 
                                    ToolTip="{lex:Loc ToolTip_Open}"
                                    Margin="0,0,5,0">
                                <TextBlock Text="{x:Static icons:IconConstants+Common.OpenFile}" 
                                           FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                           FontSize="16"/>
                            </Button>
                            <Button Style="{StaticResource ToolbarButtonStyle}" 
                                    ToolTip="{lex:Loc Common_Save}"
                                    Margin="0,0,5,0">
                                <TextBlock Text="{x:Static icons:IconConstants+Common.Save}" 
                                           FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                           FontSize="16"/>
                            </Button>
                            <Button Style="{StaticResource ToolbarButtonStyle}" 
                                    ToolTip="{lex:Loc Menu_Edit_Undo}"
                                    Margin="0,0,5,0">
                                <TextBlock Text="{x:Static icons:IconConstants+Common.Undo}" 
                                           FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                           FontSize="16"/>
                            </Button>
                            <Button Style="{StaticResource ToolbarButtonStyle}" 
                                    ToolTip="{lex:Loc Menu_Edit_Redo}"
                                    Margin="0,0,5,0">
                                <TextBlock Text="{x:Static icons:IconConstants+Common.Redo}" 
                                           FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                           FontSize="16"/>
                            </Button>
                            <Button Style="{StaticResource ToolbarButtonStyle}" 
                                    ToolTip="{lex:Loc Common_Search}"
                                    Margin="0">
                                <TextBlock Text="{x:Static icons:IconConstants+Common.Search}" 
                                           FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                           FontSize="16"/>
                            </Button>
                            <Button Style="{StaticResource ToolbarButtonStyle}" 
                                    ToolTip="Icons"
                                    Margin="0,0,5,0"
                                    Click="IconPickerButton_Click">
                                <TextBlock Text="{x:Static icons:IconConstants+Tools.Code}" 
                                           FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                           FontSize="16"/>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <Button Grid.Column="4" 
                            Command="{Binding QuickToggleThemeCommand}"
                            Style="{StaticResource ThemeToggleButtonStyle}"
                            Width="40" Height="40"
                            Margin="12,0,3,0"
                            ToolTip="{lex:Loc Settings_ToggleTheme}">
                        <TextBlock x:Name="ThemeIcon" 
                                   Text="{x:Static icons:IconConstants+Common.Light}" 
                                   FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                   FontSize="18"/>
                    </Button>

                    <Button Grid.Column="5" 
                            Command="{Binding QuickToggleLanguageCommand}"
                            Style="{StaticResource ThemeToggleButtonStyle}"
                            Width="40" Height="40"
                            Margin="0,0,12,0"
                            ToolTip="{lex:Loc Settings_ToggleLanguage}">
                        <TextBlock Text="{x:Static icons:IconConstants+Common.Language}" 
                                   FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                   FontSize="18"/>
                    </Button>

                    <StackPanel Grid.Column="6" 
                                Orientation="Horizontal" 
                                Margin="8,0,0,0">
                        <Button Style="{StaticResource WindowControlButtonStyle}" 
                                Width="46" Height="32"
                                Click="MinimizeButton_Click">
                            <TextBlock Text="{x:Static icons:IconConstants+Common.ChromeMinimize}" 
                                       FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                       FontSize="12"/>
                        </Button>
                        <Button Style="{StaticResource WindowControlButtonStyle}" 
                                Width="46" Height="32"
                                Click="MaximizeButton_Click">
                            <TextBlock x:Name="MaximizeIcon" 
                                       Text="{x:Static icons:IconConstants+Common.ChromeMaximize}" 
                                       FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                       FontSize="12"/>
                        </Button>
                        <Button Style="{StaticResource CloseButtonStyle}" 
                                Width="46" Height="32"
                                Click="CloseButton_Click">
                            <TextBlock Text="{x:Static icons:IconConstants+Common.ChromeClose}" 
                                       FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                       FontSize="12"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Body -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="NavColumn" Width="260" MinWidth="60" MaxWidth="350"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Navigation -->
                <Border x:Name="NavPanel" Grid.Column="0" 
                        Background="{DynamicResource NavBackgroundBrush}" 
                        BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,0"
                        MouseLeftButtonDown="NavPanel_MouseLeftButtonDown"
                        Cursor="Hand">
                    <Grid Background="Transparent">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <StackPanel Margin="8">
                                <StackPanel>
                                    <!-- Nav Items (unchanged) -->
                                    <Button Command="{Binding NavigateCommand}" CommandParameter="Overview"
                                            Margin="0,8,0,4" Height="44">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsOverviewPage}" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
                                                        <Setter Property="Foreground" Value="{DynamicResource SelectedBrush}"/>
                                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <Grid>
                                            <TextBlock Text="{x:Static icons:IconConstants+Common.Home}" 
                                                       FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                                       FontSize="20" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                                       Visibility="{Binding IsNavExpanded, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                                       ToolTip="{lex:Loc Nav_Overview}"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"
                                                        Visibility="{Binding IsNavExpanded, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <TextBlock Text="{x:Static icons:IconConstants+Common.Home}" 
                                                           FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                                           FontSize="16" VerticalAlignment="Center"/>
                                                <TextBlock Text="{lex:Loc Nav_Overview}" Margin="12,0,0,0" 
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                    </Button>
                                    <Button Command="{Binding NavigateCommand}" CommandParameter="Analytics"
                                            Margin="0,0,0,4" Height="44">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsAnalyticsPage}" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
                                                        <Setter Property="Foreground" Value="{DynamicResource SelectedBrush}"/>
                                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <Grid>
                                            <TextBlock Text="{x:Static icons:IconConstants+Common.Analytics}" 
                                                       FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                                       FontSize="20" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                                       Visibility="{Binding IsNavExpanded, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                                       ToolTip="{lex:Loc Nav_Analytics}"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"
                                                        Visibility="{Binding IsNavExpanded, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <TextBlock Text="{x:Static icons:IconConstants+Common.Analytics}" 
                                                           FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                                           FontSize="16" VerticalAlignment="Center"/>
                                                <TextBlock Text="{lex:Loc Nav_Analytics}" Margin="12,0,0,0" 
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                    </Button>
                                    <Button Command="{Binding NavigateCommand}" CommandParameter="Reports"
                                            Margin="0,0,0,4" Height="44">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsReportsPage}" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
                                                        <Setter Property="Foreground" Value="{DynamicResource SelectedBrush}"/>
                                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <Grid>
                                            <TextBlock Text="{x:Static icons:IconConstants+Common.Document}" 
                                                       FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                                       FontSize="20" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                                       Visibility="{Binding IsNavExpanded, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                                       ToolTip="{lex:Loc Nav_Reports}"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"
                                                        Visibility="{Binding IsNavExpanded, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <TextBlock Text="{x:Static icons:IconConstants+Common.Document}" 
                                                           FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                                           FontSize="16" VerticalAlignment="Center"/>
                                                <TextBlock Text="{lex:Loc Nav_Reports}" Margin="12,0,0,0" 
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                    </Button>
                                    <Button Command="{Binding NavigateCommand}" CommandParameter="Settings"
                                            Margin="0,0,0,4" Height="44">
                                        <Button.Style>
                                            <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsSettingsPage}" Value="True">
                                                        <Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
                                                        <Setter Property="Foreground" Value="{DynamicResource SelectedBrush}"/>
                                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                        <Grid>
                                            <TextBlock Text="{x:Static icons:IconConstants+Common.Settings}" 
                                                       FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                                       FontSize="20" 
                                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                                       Visibility="{Binding IsNavExpanded, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                                                       ToolTip="{lex:Loc Nav_Settings}"/>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left"
                                                        Visibility="{Binding IsNavExpanded, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <TextBlock Text="{x:Static icons:IconConstants+Common.Settings}" 
                                                           FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                                           FontSize="16" VerticalAlignment="Center"/>
                                                <TextBlock Text="{lex:Loc Nav_Settings}" Margin="12,0,0,0" 
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Grid>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </ScrollViewer>

                        <Button Grid.Row="1" Command="{Binding ToggleNavCommand}" 
                                Style="{StaticResource NavButtonStyle}" Height="48" Margin="8,4,8,4">
                            <Grid>
                                <Grid Visibility="{Binding IsNavExpanded, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                                    <TextBlock x:Name="ToggleIcon" 
                                               Text="{x:Static icons:IconConstants+Navigation.ChevronRight}" 
                                               FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                               FontSize="16" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"
                                               ToolTip="{lex:Loc Nav_Expand}"/>
                                </Grid>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                                            Visibility="{Binding IsNavExpanded, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock Text="{x:Static icons:IconConstants+Navigation.ChevronLeft}" 
                                               FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                               FontSize="16" VerticalAlignment="Center"/>
                                    <TextBlock Text="{lex:Loc Nav_Collapse}" Margin="8,0,0,0" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Button>
                    </Grid>
                </Border>

                <!-- Pages -->
                <Grid Grid.Column="1">
                    <!-- Overview Page (unchanged) -->
                    <Grid Visibility="{Binding IsOverviewPage, Converter={StaticResource BoolToVisibilityConverter}}" Margin="24">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <WrapPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <Border Style="{StaticResource DashboardCard}" Width="260">
                                <StackPanel>
                                    <TextBlock Text="{lex:Loc Dashboard_ActiveUsers}" FontWeight="SemiBold" 
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    <TextBlock Text="1,243" FontSize="32" FontWeight="Bold" 
                                               Margin="0,8,0,4" Foreground="{DynamicResource AccentBrush}"/>
                                    <TextBlock Text="{lex:Loc Dashboard_VsLastMonth}" FontSize="11" 
                                               Foreground="{DynamicResource SuccessBrush}"/>
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource DashboardCard}" Width="260">
                                <StackPanel>
                                    <TextBlock Text="{lex:Loc Dashboard_CPULoad}" FontWeight="SemiBold" 
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    <TextBlock Text="68%" FontSize="32" FontWeight="Bold" 
                                               Margin="0,8,0,8" Foreground="{DynamicResource AccentBrush}"/>
                                    <ProgressBar Value="68" Maximum="100" Height="6" 
                                                 Background="{DynamicResource ProgressBarBackgroundBrush}"
                                                 Foreground="{DynamicResource ProgressGradientBrush}"
                                                 BorderThickness="0"/>
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource DashboardCard}" Width="260">
                                <StackPanel>
                                    <TextBlock Text="{lex:Loc Dashboard_Errors24h}" FontWeight="SemiBold" 
                                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    <TextBlock Text="3" FontSize="32" FontWeight="Bold" 
                                               Margin="0,8,0,4" Foreground="{DynamicResource AccentBrush}"/>
                                    <TextBlock Text="{lex:Loc Dashboard_AllSystemsOK}" FontSize="11" 
                                               Foreground="{DynamicResource SuccessBrush}"/>
                                </StackPanel>
                            </Border>
                        </WrapPanel>
                        <Border Grid.Row="1" Style="{StaticResource DashboardCard}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="{lex:Loc Dashboard_Performance}" FontSize="18" 
                                           FontWeight="Bold" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,16"/>
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <StackPanel>
                                        <StackPanel Margin="0,0,0,16">
                                            <TextBlock Text="{lex:Loc Dashboard_MemoryUsage}" FontSize="12" 
                                                       Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                                            <ProgressBar Value="75" Maximum="100" Height="8" 
                                                         Background="{DynamicResource ProgressBarBackgroundBrush}"
                                                         Foreground="{DynamicResource ProgressGradientBrush}"
                                                         BorderThickness="0"/>
                                        </StackPanel>
                                        <StackPanel Margin="0,0,0,16">
                                            <TextBlock Text="{lex:Loc Dashboard_DiskIO}" FontSize="12" 
                                                       Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                                            <ProgressBar Value="45" Maximum="100" Height="8" 
                                                         Background="{DynamicResource ProgressBarBackgroundBrush}"
                                                         Foreground="{DynamicResource ProgressGradientBrush}"
                                                         BorderThickness="0"/>
                                        </StackPanel>
                                        <StackPanel>
                                            <TextBlock Text="{lex:Loc Dashboard_NetworkTraffic}" FontSize="12" 
                                                       Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>
                                            <ProgressBar Value="92" Maximum="100" Height="8" 
                                                         Background="{DynamicResource ProgressBarBackgroundBrush}"
                                                         Foreground="{DynamicResource ProgressGradientBrush}"
                                                         BorderThickness="0"/>
                                        </StackPanel>
                                    </StackPanel>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </Grid>

                    <!-- Settings Page -->
                    <Border Visibility="{Binding IsSettingsPage, Converter={StaticResource BoolToVisibilityConverter}}" 
                            Style="{StaticResource DashboardCard}">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock Text="{lex:Loc Settings_Appearance}" FontSize="24" 
                                           FontWeight="Bold" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,16"/>
                                <TextBlock Text="{lex:Loc Settings_ChooseTheme}" FontSize="14" 
                                           Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,12"/>
                                <WrapPanel Margin="0,0,0,32">
                                    <ToggleButton Content="{lex:Loc Settings_Theme_Dark}" 
                                                  Style="{StaticResource ThemeToggleButton}"
                                                  IsChecked="{Binding CurrentTheme, Converter={StaticResource ThemeConverter}, ConverterParameter=Dark}"
                                                  Command="{Binding ChangeThemeCommand}" CommandParameter="Dark">
                                        <ToggleButton.Tag>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#121212" Offset="0"/>
                                                <GradientStop Color="#1A1A1A" Offset="1"/>
                                            </LinearGradientBrush>
                                        </ToggleButton.Tag>
                                    </ToggleButton>
                                    <ToggleButton Content="{lex:Loc Settings_Theme_Light}" 
                                                  Style="{StaticResource ThemeToggleButton}"
                                                  IsChecked="{Binding CurrentTheme, Converter={StaticResource ThemeConverter}, ConverterParameter=Light}"
                                                  Command="{Binding ChangeThemeCommand}" CommandParameter="Light">
                                        <ToggleButton.Tag>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#F6F8FA" Offset="0"/>
                                                <GradientStop Color="#EDF2F7" Offset="1"/>
                                            </LinearGradientBrush>
                                        </ToggleButton.Tag>
                                    </ToggleButton>
                                    <ToggleButton Content="{lex:Loc Settings_Theme_LightBlue}" 
                                                  Style="{StaticResource ThemeToggleButton}"
                                                  IsChecked="{Binding CurrentTheme, Converter={StaticResource ThemeConverter}, ConverterParameter=LightBlue}"
                                                  Command="{Binding ChangeThemeCommand}" CommandParameter="LightBlue">
                                        <ToggleButton.Tag>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#E3F2FD" Offset="0"/>
                                                <GradientStop Color="#BBDEFB" Offset="0.3"/>
                                                <GradientStop Color="#90CAF9" Offset="0.6"/>
                                                <GradientStop Color="#E3F2FD" Offset="1"/>
                                            </LinearGradientBrush>
                                        </ToggleButton.Tag>
                                    </ToggleButton>
                                    <ToggleButton Content="{lex:Loc Settings_Theme_BlueTech}" 
                                                  Style="{StaticResource ThemeToggleButton}"
                                                  IsChecked="{Binding CurrentTheme, Converter={StaticResource ThemeConverter}, ConverterParameter=BlueTech}"
                                                  Command="{Binding ChangeThemeCommand}" CommandParameter="BlueTech">
                                        <ToggleButton.Tag>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#0A0E27" Offset="0"/>
                                                <GradientStop Color="#00D9FF" Offset="0.25"/>
                                                <GradientStop Color="#0F1419" Offset="0.5"/>
                                                <GradientStop Color="#0099FF" Offset="0.75"/>
                                                <GradientStop Color="#00FFFF" Offset="1"/>
                                            </LinearGradientBrush>
                                        </ToggleButton.Tag>
                                    </ToggleButton>
                                    <ToggleButton Content="{lex:Loc Settings_Theme_Aurora}" 
                                                  Style="{StaticResource ThemeToggleButton}"
                                                  IsChecked="{Binding CurrentTheme, Converter={StaticResource ThemeConverter}, ConverterParameter=Aurora}"
                                                  Command="{Binding ChangeThemeCommand}" CommandParameter="Aurora">
                                        <ToggleButton.Tag>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#8B5CF6" Offset="0"/>
                                                <GradientStop Color="#06B6D4" Offset="1"/>
                                            </LinearGradientBrush>
                                        </ToggleButton.Tag>
                                    </ToggleButton>
                                </WrapPanel>
                                <TextBlock Text="{lex:Loc Settings_Language}" FontSize="24" 
                                           FontWeight="Bold" Foreground="{DynamicResource TextBrush}" Margin="0,16,0,16"/>
                                <TextBlock Text="{lex:Loc Settings_ChooseLanguage}" FontSize="14" 
                                           Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,12"/>
                                <WrapPanel>
                                    <ToggleButton Content="{lex:Loc Settings_Lang_English}" 
                                                  Style="{StaticResource LanguageToggleButton}"
                                                  IsChecked="{Binding CurrentLanguage, Converter={StaticResource LanguageConverter}, ConverterParameter=en-US}"
                                                  Command="{Binding ChangeLanguageCommand}" CommandParameter="en-US"/>
                                    <ToggleButton Content="{lex:Loc Settings_Lang_Chinese}" 
                                                  Style="{StaticResource LanguageToggleButton}"
                                                  IsChecked="{Binding CurrentLanguage, Converter={StaticResource LanguageConverter}, ConverterParameter=zh-CN}"
                                                  Command="{Binding ChangeLanguageCommand}" CommandParameter="zh-CN"/>
                                    <ToggleButton Content="{lex:Loc Settings_Lang_Korean}" 
                                                  Style="{StaticResource LanguageToggleButton}"
                                                  IsChecked="{Binding CurrentLanguage, Converter={StaticResource LanguageConverter}, ConverterParameter=ko-KR}"
                                                  Command="{Binding ChangeLanguageCommand}" CommandParameter="ko-KR"/>
                                    <ToggleButton Content="{lex:Loc Settings_Lang_Japanese}" 
                                                  Style="{StaticResource LanguageToggleButton}"
                                                  IsChecked="{Binding CurrentLanguage, Converter={StaticResource LanguageConverter}, ConverterParameter=ja-JP}"
                                                  Command="{Binding ChangeLanguageCommand}" CommandParameter="ja-JP"/>
                                    <ToggleButton Content="{lex:Loc Settings_Lang_TraditionalChinese}" 
                                                  Style="{StaticResource LanguageToggleButton}"
                                                  IsChecked="{Binding CurrentLanguage, Converter={StaticResource LanguageConverter}, ConverterParameter=zh-TW}"
                                                  Command="{Binding ChangeLanguageCommand}" CommandParameter="zh-TW"/>
                                </WrapPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>

                    <!-- Analytics Page -->
                    <Grid Visibility="{Binding IsAnalyticsPage, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Border Style="{StaticResource DashboardCard}">
                            <StackPanel>
                                <TextBlock Text="{lex:Loc Analytics_Title}" FontSize="24" 
                                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,16"/>
                                <TextBlock Text="{lex:Loc Analytics_Description}" FontSize="14" 
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Reports Page -->
                    <Grid Visibility="{Binding IsReportsPage, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Border Style="{StaticResource DashboardCard}">
                            <StackPanel>
                                <TextBlock Text="{lex:Loc Reports_Title}" FontSize="24" 
                                           Foreground="{DynamicResource TextBrush}" Margin="0,0,0,16"/>
                                <TextBlock Text="{lex:Loc Reports_Description}" FontSize="14" 
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>

            <!-- Footer -->
            <Border Grid.Row="2" Background="{DynamicResource HeaderBackgroundBrush}" 
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" 
                    Height="24"
                    CornerRadius="0,0,8,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="8,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="{x:Static icons:IconConstants+Common.CheckMark}" 
                                   FontFamily="{x:Static icons:IconConstants.DefaultFontFamily}" 
                                   FontSize="12" 
                                   Foreground="{DynamicResource SuccessBrush}" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock Text="{lex:Loc Status_Ready}" FontSize="11" 
                                   Foreground="{DynamicResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,8,0">
                        <TextBlock Text="{lex:Loc Status_CurrentPage}" FontSize="11" 
                                   Foreground="{DynamicResource TextSecondaryBrush}" 
                                   VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <TextBlock Text="{Binding CurrentPageDisplay}" FontSize="11" 
                                   Foreground="{DynamicResource AccentBrush}" FontWeight="SemiBold" 
                                   VerticalAlignment="Center" Margin="0,0,16,0"/>
                        <TextBlock Text="{lex:Loc Status_Theme}" FontSize="11" 
                                   Foreground="{DynamicResource TextSecondaryBrush}" 
                                   VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <TextBlock Text="{Binding CurrentThemeDisplay}" FontSize="11" 
                                   Foreground="{DynamicResource AccentBrush}" FontWeight="SemiBold" 
                                   VerticalAlignment="Center" Margin="0,0,16,0"/>
                        <TextBlock Text="{lex:Loc Status_Language}" FontSize="11" 
                                   Foreground="{DynamicResource TextSecondaryBrush}" 
                                   VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <TextBlock Text="{Binding CurrentLanguageDisplay}" FontSize="11" 
                                   Foreground="{DynamicResource AccentBrush}" FontWeight="SemiBold" 
                                   VerticalAlignment="Center" Margin="0,0,16,0"/>
                        <TextBlock Text="{Binding SaveStatus}" FontSize="11"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
