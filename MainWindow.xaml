<Window x:Class="TechDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:TechDashboard.ViewModels"
        Title="TechDashboard" Height="720" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource WindowBackgroundBrush}">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Menu Bar -->
        <Border Grid.Row="0" Background="{DynamicResource HeaderBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1"
                Height="32">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Menu Items -->
                <Menu Grid.Column="0" Background="Transparent" VerticalAlignment="Center" Margin="8,0">
                    <MenuItem Header="文件" Foreground="{DynamicResource TextBrush}">
                        <MenuItem Header="新建" Foreground="{DynamicResource TextBrush}"/>
                        <MenuItem Header="打开" Foreground="{DynamicResource TextBrush}"/>
                        <Separator/>
                        <MenuItem Header="退出" Foreground="{DynamicResource TextBrush}"/>
                    </MenuItem>
                    <MenuItem Header="编辑" Foreground="{DynamicResource TextBrush}">
                        <MenuItem Header="撤销" Foreground="{DynamicResource TextBrush}"/>
                        <MenuItem Header="重做" Foreground="{DynamicResource TextBrush}"/>
                        <Separator/>
                        <MenuItem Header="复制" Foreground="{DynamicResource TextBrush}"/>
                        <MenuItem Header="粘贴" Foreground="{DynamicResource TextBrush}"/>
                    </MenuItem>
                    <MenuItem Header="视图" Foreground="{DynamicResource TextBrush}">
                        <MenuItem Header="刷新" Foreground="{DynamicResource TextBrush}"/>
                        <MenuItem Header="全屏" Foreground="{DynamicResource TextBrush}"/>
                    </MenuItem>
                    <MenuItem Header="帮助" Foreground="{DynamicResource TextBrush}">
                        <MenuItem Header="关于" Foreground="{DynamicResource TextBrush}"/>
                    </MenuItem>
                </Menu>

                <!-- Window Title -->
                <TextBlock Grid.Column="1" Text="TechDashboard" 
                           Foreground="{DynamicResource TextBrush}" 
                           FontSize="12" VerticalAlignment="Center" 
                           HorizontalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Main Content Area (Navigation + Content) -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="NavColumn" Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Panel -->
            <Border x:Name="NavPanel" Grid.Column="0" 
                    Background="{DynamicResource NavBackgroundBrush}" 
                    BorderBrush="{DynamicResource BorderBrush}" 
                    BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Navigation Content -->
                    <StackPanel Grid.Row="0" Margin="12">
                        <!-- Logo -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,24"
                                    Visibility="{Binding IsNavExpanded, Converter={StaticResource BoolToVis}}">
                            <Border Style="{StaticResource IconBoxStyle}">
                                <TextBlock Text="D" FontSize="20" FontWeight="Bold" 
                                           Foreground="White" HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="  DASHBOARD" 
                                       VerticalAlignment="Center" FontSize="16" FontWeight="Bold" 
                                       Foreground="{DynamicResource TextBrush}" Margin="12,0,0,0"/>
                        </StackPanel>
                        <!-- Logo Icon Only (Collapsed) -->
                        <Border Margin="0,0,0,24" 
                                Visibility="{Binding IsNavExpanded, Converter={StaticResource InverseBoolToVis}}"
                                HorizontalAlignment="Center"
                                Style="{StaticResource IconBoxStyle}">
                            <TextBlock Text="D" FontSize="20" FontWeight="Bold" 
                                       Foreground="White" HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <!-- Navigation Buttons -->
                        <StackPanel>
                            <!-- Overview Button -->
                            <Button Command="{Binding NavigateCommand}" CommandParameter="Overview"
                                    Margin="0,0,0,4">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsOverviewPage}" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource SelectedBrush}"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                                               From="0,0,0,4" To="4,0,0,4" Duration="0:0:0.15"
                                                                               AutoReverse="True"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsNavExpanded}" Value="False">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                <Setter Property="Padding" Value="8,10"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Grid>
                                    <TextBlock Text="&#xE80F;" FontFamily="Segoe MDL2 Assets" 
                                               FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"
                                               Visibility="{Binding IsNavExpanded, Converter={StaticResource InverseBoolToVis}}">
                                        <ToolTip>
                                            <TextBlock Text="Overview"/>
                                        </ToolTip>
                                    </TextBlock>
                                    <StackPanel Orientation="Horizontal" Visibility="{Binding IsNavExpanded, Converter={StaticResource BoolToVis}}">
                                        <TextBlock Text="&#xE80F;" FontFamily="Segoe MDL2 Assets" 
                                                   FontSize="16" VerticalAlignment="Center"/>
                                        <TextBlock Text="  Overview" Margin="12,0,0,0" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Button>

                            <!-- Analytics Button -->
                            <Button Command="{Binding NavigateCommand}" CommandParameter="Analytics"
                                    Margin="0,0,0,4">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsAnalyticsPage}" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource SelectedBrush}"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                                               From="0,0,0,4" To="4,0,0,4" Duration="0:0:0.15"
                                                                               AutoReverse="True"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsNavExpanded}" Value="False">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                <Setter Property="Padding" Value="8,10"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Grid>
                                    <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" 
                                               FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"
                                               Visibility="{Binding IsNavExpanded, Converter={StaticResource InverseBoolToVis}}">
                                        <ToolTip>
                                            <TextBlock Text="Analytics"/>
                                        </ToolTip>
                                    </TextBlock>
                                    <StackPanel Orientation="Horizontal" Visibility="{Binding IsNavExpanded, Converter={StaticResource BoolToVis}}">
                                        <TextBlock Text="&#xE9D9;" FontFamily="Segoe MDL2 Assets" 
                                                   FontSize="16" VerticalAlignment="Center"/>
                                        <TextBlock Text="  Analytics" Margin="12,0,0,0" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Button>

                            <!-- Reports Button -->
                            <Button Command="{Binding NavigateCommand}" CommandParameter="Reports"
                                    Margin="0,0,0,4">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsReportsPage}" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource SelectedBrush}"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                                               From="0,0,0,4" To="4,0,0,4" Duration="0:0:0.15"
                                                                               AutoReverse="True"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsNavExpanded}" Value="False">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                <Setter Property="Padding" Value="8,10"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Grid>
                                    <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" 
                                               FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"
                                               Visibility="{Binding IsNavExpanded, Converter={StaticResource InverseBoolToVis}}">
                                        <ToolTip>
                                            <TextBlock Text="Reports"/>
                                        </ToolTip>
                                    </TextBlock>
                                    <StackPanel Orientation="Horizontal" Visibility="{Binding IsNavExpanded, Converter={StaticResource BoolToVis}}">
                                        <TextBlock Text="&#xE8A5;" FontFamily="Segoe MDL2 Assets" 
                                                   FontSize="16" VerticalAlignment="Center"/>
                                        <TextBlock Text="  Reports" Margin="12,0,0,0" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Button>

                            <!-- Settings Button -->
                            <Button Command="{Binding NavigateCommand}" CommandParameter="Settings"
                                    Margin="0,0,0,4">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource NavButtonStyle}">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSettingsPage}" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
                                                <Setter Property="Foreground" Value="{DynamicResource SelectedBrush}"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                                               From="0,0,0,4" To="4,0,0,4" Duration="0:0:0.15"
                                                                               AutoReverse="True"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsNavExpanded}" Value="False">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                <Setter Property="Padding" Value="8,10"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                                <Grid>
                                    <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" 
                                               FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"
                                               Visibility="{Binding IsNavExpanded, Converter={StaticResource InverseBoolToVis}}">
                                        <ToolTip>
                                            <TextBlock Text="Settings"/>
                                        </ToolTip>
                                    </TextBlock>
                                    <StackPanel Orientation="Horizontal" Visibility="{Binding IsNavExpanded, Converter={StaticResource BoolToVis}}">
                                        <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" 
                                                   FontSize="16" VerticalAlignment="Center"/>
                                        <TextBlock Text="  Settings" Margin="12,0,0,0" 
                                                   VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <!-- Collapse Button (VSCode Style) - Bottom of Nav -->
                    <Button Grid.Row="1" Command="{Binding ToggleNavCommand}" 
                            Style="{StaticResource NavButtonStyle}" 
                            Height="48" Padding="12" Margin="4">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock x:Name="ToggleIcon" Text="&#xE76B;" 
                                       FontFamily="Segoe MDL2 Assets" FontSize="16" 
                                       VerticalAlignment="Center"/>
                            <TextBlock Text="  Collapse" Margin="8,0,0,0" 
                                       VerticalAlignment="Center"
                                       Visibility="{Binding IsNavExpanded, Converter={StaticResource BoolToVis}}"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Column="1">
                <!-- Overview Page -->
                <Grid Visibility="{Binding IsOverviewPage, Converter={StaticResource BoolToVis}}" Margin="24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Stats Cards -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Border Style="{StaticResource DashboardCard}" Width="260" Margin="0,0,16,0">
                            <StackPanel>
                                <TextBlock Text="Active Users" FontWeight="SemiBold" 
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBlock Text="1,243" FontSize="32" FontWeight="Bold" 
                                           Margin="0,8,0,4" Foreground="{DynamicResource AccentBrush}"/>
                                <TextBlock Text="↑ 12.5% vs last month" FontSize="11" 
                                           Foreground="#00C853"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource DashboardCard}" Width="260" Margin="0,0,16,0">
                            <StackPanel>
                                <TextBlock Text="CPU Load" FontWeight="SemiBold" 
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBlock Text="68%" FontSize="32" FontWeight="Bold" 
                                           Margin="0,8,0,8" Foreground="{DynamicResource AccentBrush}"/>
                                <ProgressBar Value="68" Maximum="100" Height="6" 
                                             Background="{DynamicResource ProgressBarBackgroundBrush}"
                                             Foreground="{DynamicResource ProgressGradientBrush}"
                                             BorderThickness="0"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource DashboardCard}" Width="260">
                            <StackPanel>
                                <TextBlock Text="Errors (24h)" FontWeight="SemiBold" 
                                           Foreground="{DynamicResource TextSecondaryBrush}"/>
                                <TextBlock Text="3" FontSize="32" FontWeight="Bold" 
                                           Margin="0,8,0,4" Foreground="{DynamicResource AccentBrush}"/>
                                <TextBlock Text="All systems operational" FontSize="11" 
                                           Foreground="#00C853"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Performance Chart -->
                    <Border Grid.Row="1" Style="{StaticResource DashboardCard}" Padding="20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="System Performance" FontSize="18" FontWeight="Bold" 
                                       Foreground="{DynamicResource TextBrush}" Margin="0,0,0,16"/>

                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <StackPanel Margin="0,0,0,16">
                                        <TextBlock Text="Memory Usage" FontSize="12" 
                                                   Foreground="{DynamicResource TextSecondaryBrush}" 
                                                   Margin="0,0,0,6"/>
                                        <ProgressBar Value="75" Maximum="100" Height="8" 
                                                     Background="{DynamicResource ProgressBarBackgroundBrush}"
                                                     Foreground="{DynamicResource ProgressGradientBrush}"
                                                     BorderThickness="0"/>
                                    </StackPanel>

                                    <StackPanel Margin="0,0,0,16">
                                        <TextBlock Text="Disk I/O" FontSize="12" 
                                                   Foreground="{DynamicResource TextSecondaryBrush}" 
                                                   Margin="0,0,0,6"/>
                                        <ProgressBar Value="45" Maximum="100" Height="8" 
                                                     Background="{DynamicResource ProgressBarBackgroundBrush}"
                                                     Foreground="{DynamicResource ProgressGradientBrush}"
                                                     BorderThickness="0"/>
                                    </StackPanel>

                                    <StackPanel>
                                        <TextBlock Text="Network Traffic" FontSize="12" 
                                                   Foreground="{DynamicResource TextSecondaryBrush}" 
                                                   Margin="0,0,0,6"/>
                                        <ProgressBar Value="92" Maximum="100" Height="8" 
                                                     Background="{DynamicResource ProgressBarBackgroundBrush}"
                                                     Foreground="{DynamicResource ProgressGradientBrush}"
                                                     BorderThickness="0"/>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Settings Page -->
                <Grid Visibility="{Binding IsSettingsPage, Converter={StaticResource BoolToVis}}" 
                      Margin="24"
                      Background="{DynamicResource NavBackgroundBrush}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <TextBlock Text="Appearance" FontSize="24" FontWeight="Bold" 
                                       Foreground="{DynamicResource TextBrush}" Margin="0,0,0,16"/>

                            <TextBlock Text="Choose Theme" FontSize="14" 
                                       Foreground="{DynamicResource TextSecondaryBrush}" 
                                       Margin="0,0,0,12"/>

                            <!-- Theme Selector -->
                            <WrapPanel>
                                <!-- Dark Theme -->
                                <ToggleButton Content="Dark" 
                                              Style="{StaticResource ThemeToggleButton}"
                                              IsChecked="{Binding CurrentTheme, Converter={StaticResource ThemeConverter}, ConverterParameter=Dark}"
                                              Command="{Binding ChangeThemeCommand}"
                                              CommandParameter="Dark">
                                    <ToggleButton.Tag>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#0A0E1A" Offset="0"/>
                                            <GradientStop Color="#1A1F35" Offset="1"/>
                                        </LinearGradientBrush>
                                    </ToggleButton.Tag>
                                </ToggleButton>

                                <!-- Light Theme -->
                                <ToggleButton Content="Light" 
                                              Style="{StaticResource ThemeToggleButton}"
                                              IsChecked="{Binding CurrentTheme, Converter={StaticResource ThemeConverter}, ConverterParameter=Light}"
                                              Command="{Binding ChangeThemeCommand}"
                                              CommandParameter="Light">
                                    <ToggleButton.Tag>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#F6F8FA" Offset="0"/>
                                            <GradientStop Color="#EDF2F7" Offset="1"/>
                                        </LinearGradientBrush>
                                    </ToggleButton.Tag>
                                </ToggleButton>

                                <!-- Blue Tech Theme -->
                                <ToggleButton Content="Blue Tech" 
                                              Style="{StaticResource ThemeToggleButton}"
                                              IsChecked="{Binding CurrentTheme, Converter={StaticResource ThemeConverter}, ConverterParameter=BlueTech}"
                                              Command="{Binding ChangeThemeCommand}"
                                              CommandParameter="BlueTech">
                                    <ToggleButton.Tag>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.92">
                                            <GradientStop Color="#0F1419" Offset="0"/>
                                            <GradientStop Color="#0A2540" Offset="0.5"/>
                                            <GradientStop Color="#0F1419" Offset="1"/>
                                        </LinearGradientBrush>
                                    </ToggleButton.Tag>
                                </ToggleButton>
                            </WrapPanel>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <!-- Analytics Page -->
                <Grid Visibility="{Binding IsAnalyticsPage, Converter={StaticResource BoolToVis}}" Margin="24">
                    <Border Style="{StaticResource DashboardCard}" Padding="20">
                        <TextBlock Text="Analytics Page" FontSize="24" 
                                   Foreground="{DynamicResource TextBrush}"/>
                    </Border>
                </Grid>

                <!-- Reports Page -->
                <Grid Visibility="{Binding IsReportsPage, Converter={StaticResource BoolToVis}}" Margin="24">
                    <Border Style="{StaticResource DashboardCard}" Padding="20">
                        <TextBlock Text="Reports Page" FontSize="24" 
                                   Foreground="{DynamicResource TextBrush}"/>
                    </Border>
                </Grid>
            </Grid>
        </Grid>

        <!-- Bottom Status Bar -->
        <Border Grid.Row="2" Background="{DynamicResource HeaderBackgroundBrush}" 
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0"
                Height="24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Status Text -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="8,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="12" 
                               Foreground="{DynamicResource TextSecondaryBrush}" 
                               VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBlock Text="就绪" FontSize="11" 
                               Foreground="{DynamicResource TextSecondaryBrush}" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Status Info -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,8,0">
                    <TextBlock Text="当前页面: " FontSize="11" 
                               Foreground="{DynamicResource TextSecondaryBrush}" 
                               VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding CurrentPage}" FontSize="11" 
                               Foreground="{DynamicResource AccentBrush}" 
                               FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,16,0"/>
                    <TextBlock Text="主题: " FontSize="11" 
                               Foreground="{DynamicResource TextSecondaryBrush}" 
                               VerticalAlignment="Center" Margin="0,0,4,0"/>
                    <TextBlock Text="{Binding CurrentTheme}" FontSize="11" 
                               Foreground="{DynamicResource AccentBrush}" 
                               FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>