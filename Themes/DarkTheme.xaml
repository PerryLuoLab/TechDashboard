<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colors -->
    <Color x:Key="WindowBgColor">#0B0F14</Color>
    <Color x:Key="NavBgColor">#07101A</Color>
    <Color x:Key="CardBgColor">#0F1720</Color>
    <Color x:Key="HeaderBgColor">#071523</Color>
    <Color x:Key="ForegroundColor">#E6F0FF</Color>
    <Color x:Key="AccentColor">#00A3FF</Color>
    <Color x:Key="AccentLightColor">#39C2FF</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource WindowBgColor}" />
    <SolidColorBrush x:Key="NavBackgroundBrush" Color="{StaticResource NavBgColor}" />
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{StaticResource CardBgColor}" />
    <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="{StaticResource HeaderBgColor}" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="AccentLightBrush" Color="{StaticResource AccentLightColor}" />

    <!-- Effects -->
    <DropShadowEffect x:Key="CardShadow" Color="#00294D" BlurRadius="18" ShadowDepth="0" Opacity="0.45"/>

    <!-- Button style (accent) -->
    <Style x:Key="AccentButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource AccentBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <!-- Nav button style -->
    <Style x:Key="NavButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="10,8" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <!-- small icon box -->
    <Style x:Key="IconBoxStyle" TargetType="Border">
        <Setter Property="Width" Value="36"/>
        <Setter Property="Height" Value="36"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>
