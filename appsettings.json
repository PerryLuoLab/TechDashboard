{
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Debug", "Serilog.Enrichers.Thread", "Serilog.Enrichers.Process" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "TechDashboard": "Debug"
      }
    },
    "WriteTo": [
      { "Name": "Debug" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/app-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14,
          "shared": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithProcessId" ],
    "Properties": {
      "Application": "TechDashboard"
    }
  },
  "Localization": {
    "DefaultCulture": "en-US"
  }
}
